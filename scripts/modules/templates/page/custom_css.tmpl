<md-dialog rc-drag="md-toolbar" aria-label=" {{('custom_css')| lang }} " flex="80">
	<form ng-cloak ng-submit="ok()">
    <md-toolbar>
      <div class="md-toolbar-tools">
        <h2> {{('custom_css')| lang }} </h2>
		
        <span flex></span>
        <md-button class="md-icon-button" ng-click="$dismiss()">
          <i class="fa fa-times" aria-label="Close dialog"></i>
        </md-button>
      </div>
    </md-toolbar>
	<md-dialog-content>
		<div class="md-dialog-content">
			
			<md-input-container class="md-block">
				<label> {{('builder.pagepopup.css')| lang }} </label>
				<textarea rows="5" ng-model="data.code" class="form-control"></textarea>
			</md-input-container>
		</div>
	</md-dialog-content>
	<md-dialog-actions layout="row">
		
    <span flex></span>
		<md-button type="submit">
			 {{('builder.ok')| lang }} 
		</md-button>
      <md-button ng-click="$dismiss()">
         {{('builder.cancel')| lang }} 
      </md-button>
    </md-dialog-actions>
  </form>
</md-dialog>